<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item"
    android:paddingVertical="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginVertical="20dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:background="@drawable/bg_image"
    android:backgroundTint="@color/dark_3">

    <ImageView
        android:id="@+id/view_gambar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_image"
        android:src="@drawable/ic_account"
        android:contentDescription="TODO"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="NIM"
                android:fontFamily="@font/outfit_medium"
                android:textColor="@color/white"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:id="@+id/view_nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your NIM"
                android:fontFamily="@font/outfit_medium"
                android:textColor="@color/white"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Nama"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Name"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Fakultas"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_fakultas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Fakultas"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Program Studi"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_prodi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Program Studi"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Gol Darah"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_gol_darah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Golongan Darah"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Jenis Kelamin"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Jenis Kelamin"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Tanggal Lahir"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_tgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Tanggal Lahir"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="No HP"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_no_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Nomor"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Email"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Email"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="IPK"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_ipk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your IPK"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Alamat"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
            <TextView
                android:id="@+id/view_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Your Alamat"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/white"
                android:textSize="15sp">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>